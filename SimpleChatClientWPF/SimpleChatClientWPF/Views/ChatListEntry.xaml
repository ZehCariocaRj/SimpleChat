<UserControl x:Class="SimpleChatClientWPF.Views.ChatListEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleChatClientWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="200"
             Height="40" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/SimpleChatClientWPF;component/icon.png" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.RowSpan="2" Margin="4,0,4,0"/>
        <StackPanel Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Center" >
            <TextBlock VerticalAlignment="Center" Name="ChatTitle" Text="Chat Title"/>
            <TextBlock VerticalAlignment="Center" Name="LastMessage" Text=""/>
        </StackPanel>
    </Grid>
</UserControl>
